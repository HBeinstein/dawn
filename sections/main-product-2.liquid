<div class="page-width page-width--narrow">
  <h2 class="page-title">
    {%- if section.settings.title != blank -%}
      {{ section.settings.title | escape }}
    {%- endif -%}
  </h2>
  <div class="rte">
    {%- if section.settings.hero-image != blank -%}
      {{ section.settings.hero-image }}
    {%- else -%}
      <div class='page-placeholder-wrapper placeholder'>
        {{ 'page' | placeholder_svg_tag: 'page-placeholder' }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.hero-image.name",
  "settings": [
    {
      "type": "image",
      "id": "hero-image",
      "label": "Hero Image"
    }
  ],
  "name": "Title",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Coffee School 2"
    }
  ],
  "presets": [
    {
      "name": "Coffee School"
    }
  ]
}
{% endschema %}
